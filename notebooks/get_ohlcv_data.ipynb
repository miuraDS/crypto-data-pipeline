    "# 今日の日付（UTC）を取得して0時に設定\n",
    "today_utc = pd.Timestamp.utcnow().normalize()\n",
    "\n",
    "today_str = today_utc.strftime(\"%Y%m%d\")\n",
    "\n",
    "# 1年前の同じ日付（0時）を取得\n",
    "one_year_ago_utc = today_utc - pd.DateOffset(years=1)\n",
    "\n",
    "# market = \"BTC\"  # 取引所の通貨ペア\n",
